---
const { icon, heading, paragraph } = Astro.props;
---

<div class="feature-item">
  <div class="feature-icon">
    <img src={icon.src} alt="" aria-hidden="true" loading="lazy" />
  </div>
  <div class="feature-content">
    <h3>{heading}</h3>
    <p set:html={paragraph}></p>
  </div>
</div>

<style>
  .feature-item {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .feature-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  h3 {
    padding: 1.5rem 0;
  }
</style>
