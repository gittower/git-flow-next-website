---
import HeaderNav from '../components/HeaderNav.astro';
import Footer from '../components/Footer.astro';

import '@fontsource/inria-sans';

const { title, description } = Astro.props;

const currentPath = Astro.url.pathname;
const canonicalURL = Astro.url;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- SEO Meta Tags -->
		<title>{currentPath === "/" ? title : `${title} | git-flow-next`}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={` ${title} | git-flow-next `} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/src/assets/social-sharing.jpg', Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={` ${title} | git-flow-next `}/>
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL('/src/assets/social-sharing.jpg', Astro.url)} />

	</head>
	<body>
	  <HeaderNav/>
		<slot />
		<Footer/>
	</body>
</html>

<style is:global>
  /* Reset CSS */
  *, *::before, *::after {
    box-sizing: border-box;
  }

  * {
    margin: 0;
  }

  body {
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  img, picture, video, canvas, svg {
    display: block;
    max-width: 100%;
  }

  input, button, textarea, select {
    font: inherit;
  }

  p, h1, h2, h3, h4, h5, h6 {
    overflow-wrap: break-word;
  }

  p {
    text-wrap: pretty;
  }

  h1, h2, h3, h4, h5, h6 {
    text-wrap: balance;
  }
  /* End of Reset CSS */

  :root {
    --default-white: #FFFFFF;
    --main-white: #EFEEFF;
    --main-purple: #FF39B9;
    --light-purple: #18123F;
    --main-green: #AEEA94;
    scroll-behavior: smooth;
  }

  body {
    background: #0d0921;
    font-family: 'Inria Sans', sans-serif;
    color: var(--main-white);
  }
  .container {
    max-width: 1176px;
    padding: 0 1.5rem;
    margin: 0 auto;
  }
  .blog-container {
    max-width: 800px;
    padding: 0 1.5rem;
    margin: 0 auto;
  }
  .docs-container {
    max-width: 800px;
    padding: 0 1.5rem;
    margin: 0 auto;
  }
  h2 {
    font-weight: 700;
    font-size: 3.125rem;
    line-height: 130%;
    margin-bottom: 1.5rem;
  }
  h3 {
    font-weight: 700;
    font-size: 1.5rem;
  }
  h1, h2, h3, h4, h5, h6 {
    color: var(--default-white);
  }
  p {
    font-weight: 400;
    font-size: 1rem;
    line-height: 150%;
    margin-bottom: 1rem;
  }
  img {
    max-width: 100%;
    height: auto;
  }
  a {
    color: var(--main-purple);
    transition: opacity 0.3s ease-in-out;
    padding-bottom: 3px;
    border-bottom: 2px solid transparent;
    text-decoration: none;
    &:hover {
      border-bottom: 2px solid var(--main-purple);
    }
  }
  pre {
    background: var(--light-purple);
    padding: 1rem;
    overflow-x: none;
    margin-bottom: 2rem;
  }
  .astro-code, .astro-code span {
    background: var(--light-purple) !important;

  }
  code {
    background: var(--light-purple);
    color: var(--main-green);
    border-radius: 4px;
    padding: .25rem;
  }
  .text-center {
    text-align: center;
  }
  ul li {
    padding-left: 1rem;
  }
  hr {
    height: 1px;
    width: 200px;
    margin: 55px auto 50px auto;
    background: rgba(255,255,255,0.2);
    border-bottom: 1px solid rgba(255,255,255,0.2);
  }

  .table-of-contents {
    padding-top: 1rem;
    position: sticky;
    top: 2rem;
    height: max-content;

    h3 {
      font-size: 0.875rem;
      font-weight: 700;
      line-height: 150%;
      padding-bottom: 1rem;
      padding-left: 1rem;
    }

    ul {
      padding-left: 0;
    }
    li {
      list-style-type: none;
      margin-left: 0;
      padding: .5rem 0;
      margin-bottom: .5rem;
      font-size: 0.875rem;
      padding-left: 1rem;

      a {
        color: rgba(239, 238, 255, 0.5);
        &:hover {
          color: rgba(239, 238, 255, 1);
        }
      }
    }

    .active, li:has(.active) {
      background: var(--light-purple);
      border-radius: 12px;
      height: 2.25rem;
      display: flex;
      align-items: center;
      color: var(--default-white);
      font-weight: 700;
      pointer-events: none;
      a {
        color: var(--main-white);
        border: 2px solid transparent;
      }
    }
  }

  article {
      h1 {
        font-size: 2.25rem;
        margin-bottom: 1rem;
      }
      .author {
        font-weight: 700;
        color: var(--main-green);
        font-size: 0.875rem;
        &:after {
          content: "\25CF";
          margin: 0 0.5rem;
          color: var(--default-white);
        }
      }
      .pub-date {
        font-style: italic;
        font-size: 0.875rem;
        color: var(--default-white);
      }
    }
    .blog-post-details {
      margin-bottom: 2rem;;
    }

    .blog-post {
      max-width: 65ch;

      h2 {
        font-size: 1.75rem;
        margin: 1.5rem 0 1rem;
        scroll-margin-top: .5rem;
      }

      h3 {
        font-size: 1.5rem;
      }

      p {
        font-size: 1.125rem;
        line-height: 150%;
        margin-bottom: 1rem;
      }

      img {
        padding-bottom: 1rem;
      }

      li {
        font-size: 1.125rem;
        line-height: 150%;
        margin-bottom: .5rem;
        &:last-of-type {
          margin-bottom: 1rem;
        }
      }
    }
</style>
